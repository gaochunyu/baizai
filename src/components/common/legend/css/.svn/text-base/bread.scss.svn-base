.bread-card{
  position: absolute;
  top: 10px;
  left: 50%;
  padding: 2px;
  z-index: 9;
  background: #FFFFFF;
  box-shadow: 1px 1px 2px 0 rgba(0,0,0,0.20);
  border-radius: 20px;
  .view{
    display: inline-block;
    width: 54px;
    height: 36px;
    line-height: 36px;
    font-size: 12px;
    color: #444444;
    text-align: center;
    cursor: pointer;
  }
  .active{
    background: #3C92C5;
    border-radius: 18px;
    color: #fff;
  }

}
