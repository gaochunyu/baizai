.menu-container {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  z-index: 2;
  background: #2e82b3;

  .toggle-btn-box {
      height:35px;
      border-bottom:1px solid #00000029;
      background: #2e82b3;
      display: flex;
      justify-content: space-around;
      align-items: center;

      img{
        display: block;
        width: 16px;
        height: 16px;
        cursor:pointer;
      }
      img:last-child{
        transform: rotate(180deg)
      }
    }
  .sub-menu{
    position: absolute;
    left: 65px;
    width: 120px;
    background: #3C92C5;
    border-radius: 4px;
    z-index: 1000;

    span{
      display: block;
      width: 100%;
      height: 36px;
      font-size: 14px;
      color: #FFFFFF;
      letter-spacing: 0;
      text-align: center;
      line-height: 32px;
      cursor: pointer;
    }
    span:hover{
      background: rgba(0, 0, 0, 0.2);
    }
  }

  .ivu-menu-light {
    background: #2e82b3;
  }
  .ivu-menu {
    display: block;
    margin: 0;
    padding: 0;
    outline: 0;
    list-style: none;
    color: #ffffffc7;
    font-size: 16px;
    position: relative;
    z-index: 900;
    height:calc(100vh - 64px);
    overflow: auto;


  }

  .active{
    background: rgba(0,0,0,0.20);
  }
  .sub-menu-title{
    color: #ffffffc7;
  }

  .menu-fold{
    .menu-icon:hover{
      background: rgba(0,0,0,0.2);
    }
    .menu-icon{
      height:60px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      cursor: pointer;

      svg{
        width: 20px;
        height: 20px;
        color: #fff;

      }
    }
  }
}
.ivu-menu-light.ivu-menu-vertical .ivu-menu-item-active:not(.ivu-menu-submenu){
  background: rgba(0,0,0,0);
}

.sub-menu-title{
  height: 35px;
  line-height: 30px;
}

.active-tittle{
  margin-left: -14px;
  padding-left: 12px;
  border-left: 2px solid #4EAEED;
  color: #fff;
}
