.main-container {
  position: relative;
  height: 100%;
  width: 100%;
  overflow: hidden;
  margin: 0;
  padding: 0;
  border: 0;
  background-color: #e7e7e7;
  z-index: 999;

  .main-body-container {
    position: absolute;
    top: 64px;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }

}

.login{
  position: relative;
  height: 100%;
  width: 100%;
  overflow: hidden;
  margin: 0;
  padding: 0;
  border: 0;

  img{
    width: 100%;
    height: 100%;
  }

  .login-content{
    position: absolute;
    width: 400px;
    height: 500px;

    .caption{
      width: 160px;
      height: 80px;
      margin: 0 auto;
    }
    .content{
      margin-top: 75px;
      width: 400px;
      height: 340px;
      background: rgba(0, 0, 0, 0.25);
      border-radius: 6px;
      padding: 25px 60px;

      .errortip{
        color: #F85959;
        font-size: 14px;
        height: 20px;
        display: block;
        margin: 6px;
        text-align: left;
      }
      .login-header{
        padding: 0 40px;
        font-size: 16px;
        display: flex;
        justify-content: space-between;
        color: #FFFFFF;
      }
      #login_panel{
        width: 260px;
        height: 260px;
        padding-top: 50px;
      }
      .login-way{
        opacity: 0.7;
        padding-bottom: 8px;
        cursor: pointer;
      }
      .loginActive{
        opacity: 1;
        border-bottom: 2px solid #fff;
      }
      .login-line{
        width: 280px;
        height: 36px;
        line-height: 36px;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 33px;
        padding:0 12px;
        box-sizing: border-box;
        margin-bottom: 16px;
      }
      .login-line2{
        width: 280px;
        display: flex;
        justify-content: space-between;
      }
      .login-line>i{
        color:  #CCCCCC;
        font-size: 16px;
        position: relative;
        top: -2px;
      }
      .login-input{
        background: transparent;
        border: none;
        font-size: 14px;
        color: #FFFFFF;
        outline: none;
        padding-left: 4px;
        box-sizing: border-box;
      }
      .login-input1{
        width: 226px;
      }
      .login-input2{
        width:168px;
      }
      .login-input3{
        width: 140px;
        height: 36px;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255,255,255,0);
        border-radius: 33px;
        padding: 0 14px;
        box-sizing: border-box;
        outline: none;
        color: #fff;
      }
      input::-webkit-input-placeholder{
        opacity: 0.6;
        color:#fff;
      }
      input::-moz-placeholder{
        opacity: 0.6;
        color:#fff;
      }
      .forgot-password{
        font-size: 14px;
        color: #FFFFFF;
        letter-spacing: 0;
        line-height: 14px;
        opacity: 0.8;
        margin-left: 2px;
        cursor: pointer;
      }
      .login-btn{
        width: 280px;
        height: 36px;
        line-height: 36px;
        text-align: center;
        color: #fff;
        background: #419CD9;
        border-radius: 33px;
        box-sizing: border-box;
        margin-top: 24px;
        cursor: pointer;
      }
      .regist{
        color: rgba(255, 255, 255, 0.76);
        font-size:14px;
        margin-top: 12px;
        text-align: center;
      }
      .regist_link{
        color:#419CD9;
        cursor: pointer;
        margin-left: 8px;
      }
    }
  }
}




